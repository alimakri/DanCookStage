@model IEnumerable<DanCook.Web.Controllers.CategoryViewModel>

    @{
        ViewData["Title"] = "Liste des Categories";
    }
<h2>Liste des Catégories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>
                    <a href="/product/index/@category.Id">@category.Name</a>
                </td>
            </tr>
        }
    </tbody>
</table>